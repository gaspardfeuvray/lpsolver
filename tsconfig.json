{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "es6",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
